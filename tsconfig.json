{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": false,
		"allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["es5", "es6", "dom"]
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
